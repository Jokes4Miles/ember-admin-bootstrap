<div class="col-md-12">
  <div class="edit panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        Edit ({{recordType}} {{id}})
      </h3>
    </div>

    <div class="panel-body">
      <form role="form">
        {{#each filteredColumns as |column|}}
          <div class="model-column form-group {{column}}">
            <label>
              {{column}}
              {{admin-input record=this columnValue=column class="form-control"}}
            </label>
          </div>
        {{/each}}
      </form>
    </div>

    <div class="panel-footer">
        {{async-button action="save" default="Save" pending="Saving..." fulfilled="Saved" rejected="Error" class="save btn btn-primary"}}
        <button {{action "cancel"}} class="cancel btn btn-default">Cancel</button>

        {{async-button action="destroyRecord" default="Delete" pending="Deleting..." fulfilled="Deleted" class="delete btn btn-danger pull-right"}}
    </div>
  </div>

  <div class="relationships panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        Relationships ({{recordType}} {{id}})
      </h3>
    </div>

    <div class="panel-body">
      {{#each relationshipTypes as |relationshipType|}}
        {{#each relationshipType as |relationship|}}
          <h4>{{relationship.name}}</h4>
          {{record-relationship-table relationshipType=relationshipType relationship=relationship relationshipId=id model=model}}
        {{/each}}
      {{/each}}
    </div>
  </div>
</div>
